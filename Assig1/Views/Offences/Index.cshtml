@model Assig1.ViewModels.ExpiationSearch

@{
    ViewData["Title"] = "Index";
}

<div class="text-dark bg-gradient bg-warning p-2 my-2 border rounded">
    <h2>Index</h2>
</div>

<form asp-controller="Items" asp-action="Index" method="post" class="row mb-2">
    <div class="col-4">
        <input type="text" asp-for="SearchText" placeholder="Enter expiation info...">
    </div>
    <div class="col-3">
        <select name="SpeedCodes" asp-for="SpeedCodes" class="form-control" asp-items="Model.CategoryName">
            <option value="">All Speed Codes...</option>
        </select>
    </div>
    <div class="col-4">
        <button class="btn btn-outline-primary"> Search </button>
        <a class="btn btn-outline-info" asp-action="Create">Create New</a>
    </div>
</form>

