@model Assig1.ViewModels.OffenceSearch

@{
    ViewData["Title"] = "Index";
}

<div class="text-dark bg-gradient bg-warning p-2 my-2 border rounded">
    <h2>Index</h2>
</div>

<form asp-controller="Offences" asp-action="Index" method="post" class="row mb-2">
    <div class="col-4">
        <input type="text" asp-for="SearchText" placeholder="Enter section name...">
    </div>
    <div class="col-5">
        <select name="CategoryId" asp-for="CategoryId" class="form-control" asp-items="Model.CategoryName">
            <option value="">All Categories...</option>
        </select>
    </div>
    <div class="col-4">
        <button class="btn btn-outline-primary"> Search </button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemList[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemList[0].ExpiationFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemList[0].AdultLevy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemList[0].CorporateFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemList[0].TotalFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemList[0].DemeritPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemList[0].SectionCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemList[0].SectionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemList[0].SectionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemList[0].CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ItemList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpiationFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdultLevy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CorporateFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DemeritPoints)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SectionCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SectionId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SectionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OffenceCode">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.OffenceCode">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.OffenceCode">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
