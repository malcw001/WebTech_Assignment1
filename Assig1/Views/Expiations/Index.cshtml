@model Assig1.ViewModels.ExpiationSearch

@{
    ViewData["Title"] = "Index";
}

<div class="text-dark bg-gradient bg-warning p-2 my-2 border rounded">
    <h2>Index</h2>
</div>

<form asp-controller="Expiations" asp-action="Index" method="post" class="row mb-2">
    <div class="col-3">
        <select name="LocationId" asp-for="LocationId" class="form-control" asp-items="Model.Suburb">
            <option value="">All Locations...</option>
        </select>
    </div>
    <div class="col-4">
        <button class="btn btn-outline-primary"> Search </button>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpiationList[0].Suburb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiationList[0].TotalIncidents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiationList[0].MaxSpeed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiationList[0].AvgSpeed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiationList[0].TotalPenaltyFees)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiationList[0].TotalFees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ExpiationList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Suburb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalIncidents)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.MaxSpeed) km/h
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvgSpeed) km/h
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.TotalPenaltyFees)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.TotalFees)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
